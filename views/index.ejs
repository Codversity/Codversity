<%- include('partials/header') %>
  <title>Codversity</title>
  </head>

  <body>

    <div class="jumbotron centered">
      <div class="container">
        <h1 class="display-3">Here's your detail's</h1>

        <hr />
        <% if(user){%>
          <ul class="list">
            <li class="field-text">name: <%= user.username %>
            </li>
            <li class="field-text">Email: <%= user.email%>
            </li>
          </ul>
          <a class="btn btn-warning me-5" href="/logout" role="button">Log Out</a>
          <% if(!user.verified){%>
            <a class="btn btn-success me-5" href="/verify" role="button">verify</a>
            <%}}else{%>
              <a class="btn btn-primary me-5" href="/register" role="button">Register</a>
              <a class="btn btn-primary ms-5" href="/login" role="button">Login</a>
              <%}%>
                <a class="btn btn-success ms-5" href="blog">Blogs</a>
                <div class="my-2">
                  <p class="text-danger">
                    <%=message.error%>
                  </p>
                  <p class="text-success">
                    <%=message.success%>
                  </p>
                </div>
      </div>
    </div>

    <%- include('partials/footer') %>