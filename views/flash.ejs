<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
<link rel="stylesheet" href="assets/css/flash.css">
<div class="flash">
    <% if (message.success) { %>
        <div class="success">
            <i class="icon fa fa-check-circle"></i>
            <div class="flash-message-box">
                <h5 class="flash-title">Success</h5>
                <p class="flash-message">
                    <%-message.success%>
                </p>
            </div>
            <button class="fa fa-times flash-close"></button>
        </div>
        <% } %>
            <% if (message.error) { %>
                <div class="error">
                    <i class="icon fa fa-times-circle"></i>
                    <div class="flash-message-box">
                        <h5 class="flash-title">Error</h5>
                        <p class="flash-message">
                            <%-message.error%>
                        </p>
                    </div>
                    <button class="fa fa-times flash-close"></button>
                </div>
                <% } %>
</div>
<script src="assets/js/flash.js"></script>